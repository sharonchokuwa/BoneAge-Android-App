<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:layout_marginBottom="0dp"
              android:orientation="vertical"
              android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingTop="0dp"
        android:gravity="center"
        android:text="BAA Report"
        android:layout_weight="0.2"
        android:textSize="30dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop = "3dp"
        android:layout_marginBottom="10dp"
        android:background="#1B2631"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="309dp"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/Nametxt"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Name:"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/firstNametxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FirstName "
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/lastNametxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="LastName "
                    android:textSize="20dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/accNumtxt"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Patient ID: "
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/accNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/genderT"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Gender: "
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop = "5dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/agetxt"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Chronological Age: "
                    android:textColor="#1B2631"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/chroAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text=" 60 months"
                    android:textColor="#1B2631"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom = "15dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/agetxt2"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:layout_marginTop = "3dp"
                    android:text="Bone Age: "
                    android:textColor="#1B2631"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/prediction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop = "3dp"
                    android:text=" 61 months"
                    android:textColor="#1B2631"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <ImageView
                android:id="@+id/original"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="0.50"
                android:src="@drawable/preview"/>

            <ImageView
                android:id="@+id/preprocessed"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="0.50"
                android:src="@drawable/preview"/>
            <!--android:src="@mipmap/ic_launcher"-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_marginTop = "3dp"
                android:text="Original Image"
                android:textSize="20dp"
                android:layout_weight="0.63"/>

            <TextView
                android:id="@+id/label3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop = "3dp"
                android:text="Preprocessed"
                android:textSize="20dp"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop = "3dp"
        android:layout_marginBottom="10dp"
        android:background="#1B2631"/>


</LinearLayout>

